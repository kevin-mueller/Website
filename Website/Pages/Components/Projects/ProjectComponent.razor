@if (!TextRight)
{
    <div class="row justify-content-center no-gutters mb-5 mb-lg-0">
        <div class="col-lg-6">
            <img class="img-fluid" src="img/demo-image-01.jpg" alt="">
        </div>
        <div class="col-lg-6">
            <div class="bg-black text-center h-100 project">
                <div class="d-flex h-100">
                    <div class="project-text w-100 my-auto text-center text-lg-left">
                        <h4 class="text-white">@ProjectTitle</h4>
                        <p class="mb-0 text-white-50">@ProjectDescription</p>
                        <hr class="d-none d-lg-block mb-0 ml-0">
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="row justify-content-center no-gutters">
        <div class="col-lg-6">
            <img class="img-fluid" src="img/demo-image-02.jpg" alt="">
        </div>
        <div class="col-lg-6 order-lg-first">
            <div class="bg-black text-center h-100 project">
                <div class="d-flex h-100">
                    <div class="project-text w-100 my-auto text-center text-lg-right">
                        <h4 class="text-white">@ProjectTitle</h4>
                        <p class="mb-0 text-white-50">@ProjectDescription</p>
                        <hr class="d-none d-lg-block mb-0 mr-0">
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@code {
    public ProjectComponent() { }
    public ProjectComponent(string ProjectTitle, string ProjectDescription, bool TextRight, string ImageSrc)
    {
        this.ProjectTitle = ProjectTitle;
        this.ProjectDescription = ProjectDescription;
        this.TextRight = TextRight;
        this.ImageSrc = ImageSrc;
    }

    //Keep them public because the component is created dynamically as well as in markup
    [Parameter]
    public string ProjectTitle { get; set; }

    [Parameter]
    public string ProjectDescription { get; set; }

    [Parameter]
    public bool TextRight { get; set; }

    [Parameter]
    public string ImageSrc { get; set; }
}